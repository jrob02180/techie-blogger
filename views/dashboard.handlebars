<section class="new-post-section">
    <button type="submit" class="btn" id="create-new post">Create a new post</button>
</section>

{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/posts/{{post.id}}" class="edit-link">Edit post</a>
        </li> 
        {{/each}}
    </ul>
</section>
{{/if}}

<footer>
    <button>+ New Post</button>
</footer>
<script src="./js/dashboard"></script>